{
    "extends": ["next/core-web-vitals", "next/typescript"],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",              // Deshabilita la advertencia por uso de 'any'
      "@typescript-eslint/no-unused-vars": "off",                // Deshabilita la advertencia por variables no usadas
      "react-hooks/exhaustive-deps": "off",                      // Deshabilita la advertencia sobre dependencias en useEffect
      "no-unused-vars": "off",                                   // Deshabilita la advertencia por variables no usadas en JavaScript
      "react/jsx-no-undef": "off",                               // Deshabilita la advertencia por componentes no definidos
      "react/prop-types": "off",                                 // Deshabilita la advertencia sobre la validación de props en React
      "react/display-name": "off",                               // Deshabilita la advertencia por no tener displayName en componentes
      "next/next/no-img-element": "off",                          // Deshabilita la advertencia por usar <img> en vez de <Image>
      "react/no-children-prop" : "off",                          // Deshabilita la advertencia sobre el uso de la prop 'children'
      "@next/next/no-async-client-components": "off"             // Deshabilita la advertencia por componentes asíncronos en el cliente
    }
  }